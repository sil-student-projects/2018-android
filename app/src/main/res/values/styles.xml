<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom tool bar style. -->
    <style name="CustomToolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorToolBarBackground</item>
    </style>

    <!-- Custom menu popup style. -->
    <style name="CustomMenuPopUpStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorToolBarMenuPopUpBackground</item>
    </style>
</resources>
